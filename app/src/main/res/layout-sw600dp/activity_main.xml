<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/forest_background_by_whitewolf16"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/gameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/games_icon"
        android:background="@android:color/transparent"
        android:text="Spill"
        android:layout_alignTop="@+id/story_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp" />

    <ImageButton
        android:id="@+id/storyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/startstorybutton"
        android:background="@android:color/transparent"
        android:text="Start Historie"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="63dp" />
    <ImageButton
        android:id="@+id/animalButtpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/owl_icon"
        android:background="@android:color/transparent"
        android:text="Dyr"
        android:layout_marginRight="67dp"
        android:layout_marginEnd="67dp"
        android:layout_alignTop="@+id/gameButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start historien"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/storyButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_below="@+id/gameButton"
        android:layout_toLeftOf="@+id/storyButton"
        android:layout_toStartOf="@+id/storyButton"
        android:layout_marginRight="328dp"
        android:layout_marginEnd="328dp" />
    <fragment
        android:name="leselyst.fortaltdigitalt.fragments.story.StoryFragment"
        android:id="@+id/story_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />

</RelativeLayout>

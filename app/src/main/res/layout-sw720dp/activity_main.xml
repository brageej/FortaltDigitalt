<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background1"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/gameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/games"
        android:background="@android:color/transparent"
        android:text="Spill"
        android:layout_below="@+id/animalButtpn"
        android:layout_toRightOf="@+id/story_fragment"
        android:layout_toEndOf="@+id/story_fragment"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="116dp" />

    <ImageButton
        android:id="@+id/storyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/story"
        android:background="@android:color/transparent"
        android:text="Start Historie"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="203dp"
        android:layout_marginEnd="203dp"
        android:layout_alignBottom="@+id/story_fragment"
        android:layout_toLeftOf="@+id/animalButtpn"
        android:layout_toStartOf="@+id/animalButtpn" />
    <ImageButton
        android:id="@+id/animalButtpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animals"
        android:background="@android:color/transparent"
        android:text="Dyr"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="91dp" />

    <fragment
        android:name="leselyst.fortaltdigitalt.fragments.story.StoryFragment"
        android:id="@+id/story_fragment"
        android:layout_width="0"
        android:layout_height="match_parent"
        />

</RelativeLayout>
